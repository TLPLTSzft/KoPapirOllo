<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="top"
	android:orientation="vertical"
	tools:context=".MainActivity">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20sp"
		android:weightSum="2">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="left"
			android:orientation="horizontal">
			
			<ImageView
				android:id="@+id/imageViewGepElet1"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="2sp"
				android:src="@drawable/heart2" />
			
			<ImageView
				android:id="@+id/imageViewGepElet2"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="2sp"
				android:src="@drawable/heart2" />
			
			<ImageView
				android:id="@+id/imageViewGepElet3"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="2sp"
				android:src="@drawable/heart2" />
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2sp"
				android:text="Gép"
				android:textSize="30sp" />
		
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="right"
			android:orientation="horizontal">
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="2sp"
				android:text="Játékos"
				android:textSize="30sp" />
			
			<ImageView
				android:id="@+id/imageViewJatekosElet1"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginRight="2sp"
				android:src="@drawable/heart2" />
			
			<ImageView
				android:id="@+id/imageViewJatekosElet2"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginRight="2sp"
				android:src="@drawable/heart2" />
			
			<ImageView
				android:id="@+id/imageViewJatekosElet3"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginRight="2sp"
				android:src="@drawable/heart2" />
		
		</LinearLayout>
	
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginVertical="20sp"
		android:gravity="center"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/textViewDontetlenekSzama"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="30sp"
			android:text="Döntetlenek száma: 0"
			android:textSize="30sp" />
		
		<ImageView
			android:id="@+id/imageViewGepValasztasa"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/rock" />
		
		<TextView
			android:id="@+id/textViewGepValasztasa"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="30sp"
			android:text="A gép választása"
			android:textSize="30sp" />
		
		<ImageView
			android:id="@+id/imageViewJatekosValasztasa"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/rock" />
		
		<TextView
			android:id="@+id/textViewJatekosValasztasa"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="A játékos választása"
			android:textSize="30sp" />
	
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal">
		
		<ImageView
			android:id="@+id/imageViewValasztasKo"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/rock" />
		
		<ImageView
			android:id="@+id/imageViewValasztasPapir"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/paper" />
		
		<ImageView
			android:id="@+id/imageViewValasztasOllo"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/scissors" />
	
	</LinearLayout>

</LinearLayout>
